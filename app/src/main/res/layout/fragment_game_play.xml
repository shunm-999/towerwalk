<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.GamePlayFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/game_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_dark" />

        <LinearLayout
            android:id="@+id/board_wrapper_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <!-- ボタン中央 -->
        <ImageView
            android:id="@+id/center_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:visibility="invisible"
            app:srcCompat="@drawable/button_left" />

        <!-- ボタン（上） -->
        <ImageView
            android:id="@+id/top_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_above="@id/center_button"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/button_top_selector" />

        <!-- ボタン（左） -->
        <ImageView
            android:id="@+id/left_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/center_button"
            android:contentDescription="@null"
            app:srcCompat="@drawable/button_left_selector" />

        <!-- ボタン（右） -->
        <ImageView
            android:id="@+id/right_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/center_button"
            android:contentDescription="@null"
            app:srcCompat="@drawable/button_right_selector" />

        <!-- ボタン（下） -->
        <ImageView
            android:id="@+id/bottom_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_below="@id/center_button"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            app:srcCompat="@drawable/button_bottom_selector" />

    </RelativeLayout>

</LinearLayout>